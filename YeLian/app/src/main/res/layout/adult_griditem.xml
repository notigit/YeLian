<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/griditem_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shikan_1"
        android:contentDescription="@string/action_settings"/>
    <RelativeLayout
        android:id="@+id/griditem_rl"
        android:layout_below="@+id/griditem_pic"
        android:layout_alignRight="@+id/griditem_pic"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/griditem_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="老汉少妻亡人"/>
        <TextView
            android:id="@+id/griditem_tv_keyword"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剧情"/>
    </RelativeLayout>
    <TextView
        android:layout_alignRight="@+id/griditem_rl"
        android:layout_below="@+id/griditem_rl"
        android:layout_alignLeft="@+id/griditem_pic"
        android:layout_marginTop="5dp"
        android:id="@+id/griditem_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"/>
</RelativeLayout>